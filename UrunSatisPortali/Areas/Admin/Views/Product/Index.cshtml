@model IEnumerable<UrunSatisPortali.Models.Product>

@{
    ViewData["Title"] = "Ürünler";
}

<h1>Ürünler</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Yeni Ürün Ekle</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Ürün Adı</th>
            <th>Fiyat</th>
            <th>Stok</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>@item.Stock</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Düzenle</a>
                    <button data-id="@item.Id" class="btn btn-danger btn-sm js-delete">Sil</button>
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts {
    <script>
        $(document).ready(function () {
            $(".js-delete").on("click", function () {
                var btn = $(this); 

                var confirmation = confirm("Bu ürünü silmek istediğinizden emin misiniz?");

                if (confirmation) {
                    $.ajax({
                        url: "/Admin/Product/Delete/" + btn.data("id"),  
                        method: "POST",
                        success: function (response) {
                            if (response.success) {
                                btn.closest("tr").fadeOut(500, function () {
                                    $(this).remove();
                                });
                                alert(response.message);                           } else {
                                alert(response.message); 
                            }
                        },
                        error: function () {
                            alert("Bir hata oluştu.");
                        }
                    });
                }
            });
        });
    </script>
}